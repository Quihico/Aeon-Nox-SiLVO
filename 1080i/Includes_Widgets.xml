	<include name="PortraitArt">
		<param name="layoutWidth" default="205"/>
		<param name="layoutHeight" default="310"/>
		<param name="artLeft" default="5"/>
		<param name="artTop" default="5"/>
		<param name="artWidth" default="200"/>
		<param name="artHeight" default="300"/>
		<param name="Path" default="$INFO[Container(9000).ListItem.Property(widgetPath)]"/>
		<param name="Target" default="$INFO[Container(9000).ListItem.Property(widgetTarget)]"/>
		<definition>
			<itemlayout height="$PARAM[layoutHeight]" width="$PARAM[layoutWidth]">
				<control type="image">
					<left>$PARAM[artLeft]</left>
					<top>$PARAM[artTop]</top>
					<width>$PARAM[artWidth]</width>
					<height>$PARAM[artHeight]</height>
					<fadetime>400</fadetime>
					<aspectratio>scale</aspectratio>
					<animation effect="zoom" end="96,96" center="auto" condition="StringCompare(Skin.String(Poster.Case),Glass)">conditional</animation>
					<animation effect="zoom" end="95,90" center="100,250" condition="StringCompare(Skin.String(Poster.Case),Case)">conditional</animation>
					<animation effect="zoom" end="94,97" center="auto" condition="StringCompare(Skin.String(Poster.Case),Clear Case)">conditional</animation>
					<colordiffuse>$VAR[HomeWidgetTransVar]</colordiffuse>
					<texture background="true" fallback="DefaultMovies.png">$VAR[HomeWidgetPosterVar]</texture>
				</control>
				<control type="image">
					<left>$PARAM[artLeft]</left>
					<top>$PARAM[artTop]</top>
					<width>$PARAM[artWidth]</width>
					<height>$PARAM[artHeight]</height>
					<colordiffuse>$VAR[HomeWidgetTransVar]</colordiffuse>
					<texture>$VAR[HomeWidgetCaseVar]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="$PARAM[layoutHeight]" width="$PARAM[layoutWidth]">
				<control type="group">
					<animation  type="Focus" reversible="false">
						<effect type="zoom" start="95" end="100" time="300" tween="sine" easing="inout" center="auto" />
					</animation>
					<control type="image">
						<left>$PARAM[artLeft]</left>
						<top>$PARAM[artTop]</top>
						<width>$PARAM[artWidth]</width>
						<height>$PARAM[artHeight]</height>
						<fadetime>400</fadetime>
						<aspectratio>scale</aspectratio>
						<animation effect="zoom" end="96,96" center="auto" condition="StringCompare(Skin.String(Poster.Case),Glass)">conditional</animation>
						<animation effect="zoom" end="95,90" center="100,250" condition="StringCompare(Skin.String(Poster.Case),Case)">conditional</animation>
						<animation effect="zoom" end="94,97" center="auto" condition="StringCompare(Skin.String(Poster.Case),Clear Case)">conditional</animation>
						<colordiffuse>$VAR[HomeWidgetTransVar]</colordiffuse>
						<texture background="true" fallback="DefaultMovies.png">$VAR[HomeWidgetPosterVar]</texture>
					</control>
					<control type="image">
						<left>$PARAM[artLeft]</left>
						<top>$PARAM[artTop]</top>
						<width>$PARAM[artWidth]</width>
						<height>$PARAM[artHeight]</height>
						<colordiffuse>$VAR[HomeWidgetTransVar]</colordiffuse>
						<texture>$VAR[HomeWidgetCaseVar]</texture>
					</control>
				</control>
			</focusedlayout>
			<content target="$PARAM[Target]">$PARAM[Path]</content>
		</definition>
	</include>
